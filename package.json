{
  "name": "leapjs-typescript-starter",
  "version": "1.0.0",
  "description": "Typescript starter template using leapjs",
  "author": "Sanchan Moses <sanchanm@wekancode.com>",
  "main": "build/src/server.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "shx rm -rf build",
    "start": "cross-env NODE_ENV=development node build/src/server.js --color | bunyan -o short",
    "start:debug": "node --inspect-brk build/server.js --color | bunyan -o short",
    "watch": "tsc-watch --onSuccess \"npm run start\"",
    "lint": "eslint ./**/*.ts --ext .ts",
    "test": "cross-env NODE_ENV=test TS_NODE_FILES=true nyc mocha",
    "seed": "node build/tools/seeder/main.js --color | bunyan -o short",
    "trace": "node --prof build/src/server.js",
    "flamegraph": "node --prof-process --preprocess -j isolate*.log | flamebearer"
  },
  "engines": {
    "npm": ">5.0",
    "node": ">8.9.0"
  },
  "_moduleAliases": {
    "app": "build/src/app",
    "configuration": "build/src/configuration",
    "common": "build/src/common",
    "resources": "build/src/resources",
    "src": "build/src"
  },
  "dependencies": {
    "@leapjs/access-control": "^0.5.21",
    "@leapjs/common": "^0.5.21",
    "@leapjs/core": "^0.5.21",
    "@leapjs/crud": "^0.5.21",
    "@leapjs/messaging": "^0.5.21",
    "@leapjs/router": "^0.5.21",
    "@typegoose/typegoose": "^6.4.0",
    "argon2": "^0.26.1",
    "aws-sdk": "2.635.0",
    "bunyan": "1.8.12",
    "chalk": "2.4.2",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-mung": "^0.5.1",
    "fast-json-stable-stringify": "^2.1.0",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "2.2.2",
    "moment": "^2.24.0",
    "mongoose": "5.9.4",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/bunyan": "1.8.6",
    "@types/chai": "4.2.0",
    "@types/cors": "2.8.6",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.1",
    "@types/express-mung": "^0.5.2",
    "@types/helmet": "0.0.44",
    "@types/mocha": "5.2.7",
    "@types/mongoose": "5.7.6",
    "@types/passport": "1.0.1",
    "@types/passport-jwt": "3.0.1",
    "@types/proxyquire": "^1.3.28",
    "@types/request": "^2.48.4",
    "@types/shelljs": "^0.8.5",
    "@types/sinon": "^7.0.13",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "chai": "4.2.0",
    "cross-env": "^5.2.1",
    "eslint": "6.2.1",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.0",
    "flamebearer": "^1.1.3",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "mocha": "^7.1.0",
    "mochawesome": "^5.0.0",
    "nyc": "^15.0.0",
    "prettier": "1.18.2",
    "shx": "^0.3.2",
    "sinon": "7.4.1",
    "source-map-support": "^0.5.13",
    "ts-node": "8.3.0",
    "tsc-watch": "^4.2.3",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint ./**/*.ts --config ./.eslintrc.js --fix",
      "prettier --config ./.prettierrc.js --write ./**/*.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  }
}
